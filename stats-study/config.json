{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Stats Study",
    "version": "pilot",
    "authors": ["The reVISit Team"],
    "date": "2024-03-19",
    "description": "A simple stats study",
    "organizations": ["WPI"]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "stats-study/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": true,
    "recordAudio": true,
    "studyEndMsg": "Thank you for completing the study."
  },
  "importedLibraries": ["demographics", "mic-check"],
  "components": {
    "consent": {
      "type": "markdown",
      "path": "stats-study/assets/consent.md",
      "nextButtonText": "Agree",
      "response": [
        {
          "id": "accept",
          "prompt": "Do you consent to the study and wish to continue?",
          "requiredValue": "Accept",
          "location": "belowStimulus",
          "type": "radio",
          "options": [
            "Decline",
            "Accept"
          ]
        }
      ],
      "recordAudio": false
    },
    "introduction": {
      "type": "markdown",
      "path": "stats-study/assets/introduction.md",
      "response": []
    },
    "linkedGraph": {
      "type": "react-component",
      "instruction": "You can add the data, and see basic statistics and distribution.",
      "instructionLocation": "sidebar",
      "path": "stats-study/assets/LinkedGraph.tsx",
      "parameters": { "taskid": "linkedGraph" },
      "response": [
      ],
      "recordAudio": true
    },
    "correlation": {
      "type": "react-component",
      "instruction": "Explore correlation: adjust the relationship strength, add points, and observe how the Pearson correlation coefficient changes.",
      "instructionLocation": "sidebar",
      "path": "stats-study/assets/CorrelationExplorer.tsx",
      "parameters": { "taskid": "correlation" },
      "response": [
      ],
      "recordAudio": true
    },
    "linearRegression": {
      "type": "react-component",
      "instruction": "Explore linear regression: click to add points, toggle residuals and step-by-step mode, and observe the regression line, SSE, and prediction table.",
      "instructionLocation": "sidebar",
      "path": "stats-study/assets/LinearReg.tsx",
      "parameters": { "taskid": "linearRegression" },
      "response": [
      ],
      "recordAudio": true
    },
    "samplingSimulator": {
      "type": "react-component",
      "instruction": "Simulate sampling distributions: choose a population shape, set sample size & number of samples, then run to see both the population histogram and the sampling‚Äêdistribution histogram with means.",
      "instructionLocation": "sidebar",
      "path": "stats-study/assets/SamplingSimulator.tsx",
      "parameters": { "taskid": "samplingSimulator" },
      "response": [
      ],
      "recordAudio": true
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "consent",
      "introduction",
      "linkedGraph",
      "correlation",
      "linearRegression",
      "samplingSimulator"
    ]
  }
}
